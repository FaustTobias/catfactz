{
	"name": "svelte-app",
	"version": "1.0.0",
	"scripts": {
		"build": "rollup -c",
		"dev": "rollup -c -w",
		"lint": "yarn lint:prettier",
		"lint:fix": "yarn lint:prettier:fix",
		"lint:prettier": "prettier --check . **/*.svelte",
		"lint:prettier:fix": "prettier --write . **/*.svelte",
		"start": "sirv --host 0.0.0.0 public",
		"validate": "svelte-check"
	},
	"dependencies": {
		"sirv-cli": "^1.0.0"
	},
	"devDependencies": {
		"@faustt/prettier-config": "^1.0.0",
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "^11.0.0",
		"@rollup/plugin-typescript": "^8.0.0",
		"@tsconfig/svelte": "^1.0.0",
		"@types/prettier": "^2",
		"@yarnpkg/pnpify": "^2.4.0",
		"autoprefixer": "^10.2.4",
		"husky": "^4",
		"lint-staged": "^10.5.4",
		"postcss": "^8.2.6",
		"postcss-nesting": "^7.0.1",
		"prettier": "^2.2.1",
		"prettier-plugin-svelte": "^2.1.6",
		"rollup": "^2.3.4",
		"rollup-plugin-css-only": "^3.1.0",
		"rollup-plugin-livereload": "^2.0.0",
		"rollup-plugin-svelte": "^7.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"svelte": "^3.0.0",
		"svelte-check": "^1.0.0",
		"svelte-language-server": "^0.12.14",
		"svelte-preprocess": "^4.6.9",
		"tailwindcss": "^2.0.3",
		"tslib": "^2.0.0",
		"typescript": "^4.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts,json,yml,yaml,svelte}": "prettier --write"
	}
}
